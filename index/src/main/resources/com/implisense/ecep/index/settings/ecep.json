{
  "index": {
    "number_of_shards": 6,
    "number_of_replicas": 0,
    "max_result_window": 100000,
    "analysis": {
      "analyzer": {
        "contentAnalyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase"
          ]
        },
        "keywordLowercaseAnalyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": "lowercase"
        }
      }
    }
  }
}